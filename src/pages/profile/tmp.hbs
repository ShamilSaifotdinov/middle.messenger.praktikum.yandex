{{{ updatePasswordModal }}}
{{{ updateAvatarModal }}}
<header class="profile_header">
    {{{ back }}}
    {{{ logout }}}
</header>
<section class="profile_container">
    <div class="profile_content">
        {{{ avatar }}}
        {{#if isChangeable}}
            {{{ form }}}
        {{/if}}
        {{#unless isChangeable}}
            <div class="profile-details">
                {{{ details }}}
            </div>
            <div class="profile-details_buttons">
                {{{ changeProfile }}}
                {{{ changePassword }}}
            </div>
        {{/unless}}
    </div>    
</section>
